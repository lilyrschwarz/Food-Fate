<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/enter_ingredient"
            android:ems="10"
            android:id="@+id/enter1" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/enter_ingredient"
            android:ems="10"
            android:id="@+id/enter2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/enter1"
            android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/enter_ingredient"
            android:ems="10"
            android:id="@+id/enter3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/enter2"
            android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredient1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/enter1"
            android:layout_marginEnd="8dp" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredient2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/enter2"
            android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ingredient1"/>
    <TextView
            android:text="@string/ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/enter3"
            android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ingredient2"/>
    <Button
            android:text="@string/find_my_recipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.081"/>
</android.support.constraint.ConstraintLayout>